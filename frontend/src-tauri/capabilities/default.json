{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:31719/v1/*"
        },
        {
          "url": "https://api.github.com/repos/truearken/valovault/*"
        },
        {
          "url": "https://valorant-api.com/v1/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "..\\..\\backend\\tmp\\valovault-backend",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}
